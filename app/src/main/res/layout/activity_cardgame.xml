<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.erdem.mate.CardgameActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="20dp"
        android:text="Question"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#64605F"
        android:id="@+id/cardgame_question"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="false"
        android:textAlignment="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="60dp"
        android:text="Answer 1"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#000000"
        android:ems="11"
        android:id="@+id/cardgame_answer_1"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="false"
        android:textAlignment="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="40dp"
        android:text="Answer 2"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#000000"
        android:ems="11"
        android:id="@+id/cardgame_answer_2"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="false"
        android:textAlignment="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="40dp"
        android:text="Answer 3"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#000000"
        android:ems="11"
        android:id="@+id/cardgame_answer_3"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="false"
        android:textAlignment="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="40dp"
        android:text="Answer 4"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#000000"
        android:ems="11"
        android:id="@+id/cardgame_answer_4"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="false"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="Quiz number"
        android:textColor="#c8c8c8"
        android:id="@+id/cardgame_quiznum" />


</LinearLayout>
