<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/DefaultTheme"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#333333"
    tools:context="com.android.erdem.mate.RegisterActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerscreen_username_text"
        android:hint="username"
        android:paddingStart="25dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#646464"
        android:textColor="#a2a2a2"
        android:layout_below="@+id/imageView2"
        android:ems="11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal" />
    <EditText
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerscreen_email_text"
        android:hint="e-mail address"
        android:paddingStart="25dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#646464"
        android:textColor="#a2a2a2"
        android:layout_below="@+id/imageView2"
        android:ems="13"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
    <EditText
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerscreen_password_text"
        android:hint="password"
        android:inputType="textPassword"
        android:paddingStart="25dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#646464"
        android:textColor="#a2a2a2"
        android:layout_below="@+id/imageView2"
        android:ems="13"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
    <EditText
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerscreen_age_text"
        android:hint="age"
        android:paddingStart="25dp"
        android:inputType="number"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#646464"
        android:textColor="#a2a2a2"
        android:layout_below="@+id/imageView2"
        android:ems="13"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
    <EditText
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerscreen_sex_text"
        android:hint="sex"
        android:paddingStart="25dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#646464"
        android:textColor="#a2a2a2"
        android:layout_below="@+id/imageView2"
        android:ems="13"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="50dp"
        android:text="Next"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#4a4a4a"
        android:ems="11"
        android:id="@+id/registerscreen_signup_text"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="false"
        android:textAlignment="center" />
    <TextView
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="10dp"
        android:text="Sign Up with Facebook"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#333333"
        android:ems="11"
        android:id="@+id/registerscreen_signupwithfacebook_text"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="false"
        android:textAlignment="center" />


</LinearLayout>
