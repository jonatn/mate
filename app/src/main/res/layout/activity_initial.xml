<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:theme="@style/InitialTheme"
    tools:context="com.android.erdem.mate.InitialActivity"
    android:background="#333333"
    android:weightSum="1"
    android:orientation="vertical">


    <ImageView
        android:layout_width="346dp"
        android:layout_height="106dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:src="@drawable/mate_logo_white"
        android:id="@+id/imageView"
        android:cropToPadding="false" />

    <TextView
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="150dp"
        android:text="Sign Up"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#4a4a4a"
        android:ems="11"
        android:id="@+id/initial_sign_up_text"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="false"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="30dp"
        android:text="Already have an account?"
        android:textColor="#919191"
        android:id="@+id/initial_alreadyhaveaccount"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="10dp"
        android:text="Sign In"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#4a4a4a"
        android:ems="11"
        android:id="@+id/initial_sign_in_text"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="false"
        android:textAlignment="center" />

</LinearLayout>
